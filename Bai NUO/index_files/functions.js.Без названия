/* Google Analitics transactions */function funcGoogle(shortName,productName,category,price){time=new Date();var dates=time.getDate();if(dates<10){dates="0"+dates}var month=time.getMonth()+1;if(month<10){month="0"+month}var seconds=time.getSeconds();if(seconds<10){seconds="0"+seconds}var minutes=time.getMinutes();if(minutes<10){minutes="0"+minutes}var hours=time.getHours();if(hours<10){hours="0"+hours}var OrderId=dates+""+month+"0"+(time.getYear()-100)+""+hours+""+minutes+""+seconds;ga('ecommerce:addTransaction',{'id':OrderId,'affiliation':"",'revenue':price,'shipping':"0",'tax':"0.0"});ga('ecommerce:addItem',{'id':OrderId,'name':shortName,'sku':productName,'category':category,'price':price,'quantity':"1"});ga('ecommerce:send')}