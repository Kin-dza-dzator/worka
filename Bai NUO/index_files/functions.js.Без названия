var idTimer,id;
function again(){idTimer=setTimeout('rotate()',1000);}
function rotate(){current++;if(current>3){current=1}document.getElementById("banner"+previous).style.display="none";document.getElementById("banner"+current).style.display="block";previous=current;idTimer=setTimeout("rotate()",5000)};
function freeze(id){clearTimeout(idTimer);document.getElementById("banner"+current).style.display="none";current=id;document.getElementById("banner"+id).style.display="block";previous=id};
function alpha(id,value){document.getElementById(id).style.opacity=value/100;document.getElementById(id).style.filter="alpha(opacity="+value*1+")"};
